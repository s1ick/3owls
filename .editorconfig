# EditorConfig (https://editorconfig.org)
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

# TypeScript/JavaScript files
[*.{ts,js}]
quote_type = single
ij_typescript_use_double_quotes = false

# Angular templates
[*.html]
indent_size = 2
max_line_length = 140

# Styles
[*.{css,scss,less}]
indent_size = 2

# Markdown
[*.md]
max_line_length = off
trim_trailing_whitespace = false

# JSON
[*.json]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2

# Git ignore
[.gitignore]
indent_style = unset
indent_size = unset

# Docker files
[Dockerfile]
indent_style = tab